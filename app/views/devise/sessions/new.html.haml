%div{:id => "box_container"}
  - if notice
    %p{:class => "notice round bottom-margin"}= notice
  - if alert
    %p{:class => "alert round bottom-margin"}= alert
  = devise_error_messages!
  %div{:id => "box_1", :class => "round dark-border"}
    %h2{:class => "bottom-margin"} Sign In
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %p
        = f.label :email
        %br/
        = f.text_field :email
      %p
        = f.label :password
        %br/
        = f.password_field :password
      - if devise_mapping.rememberable?
        %p
          = f.check_box :remember_me
          = f.label :remember_me
      %p= f.submit "Sign In",{:class => "shadow"}
    = render :partial => "devise/shared/links"

  %div{:id => "box_2", :class => "round dark-border"}
    %h2{:class => "bottom-margin"} Sign Up
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      %p
        = f.label :email
        %br/
        = f.text_field :email
      %p
        = f.label :password
        %br/
        = f.password_field :password
      %p
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation
      %p= f.submit "Sign Up",{:class => "shadow"}

